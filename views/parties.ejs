<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>Parties</h1>
    <button onclick="newParty()">글쓰기</button>

    <script>
      (function () {
        let result1 = "";
        const local = sessionStorage.getItem("token");
        console.log(local);
        const currentUrl = window.location.href;
        console.log(currentUrl);
        if (local != null) {
          axios({
            method: "post",
            url: `${currentUrl}/verify`,
            data: {
              token: local,
            },
          }).then((result) => {
            result1 = result;
            console.log("유저아이디: ", result1.data.user.id);
          });
        } else {
          console.log("로그인 실패");
        }
      })();

      function newParty() {
        location.href = `/parties/host`;
      }
    </script>
  </body>
</html>
