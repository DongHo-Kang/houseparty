<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>Parties</h1>
    <button onclick="write1()">글쓰기</button>
    <ul>
      <% for (let i = 0; i < parties.length; i++) { %>
      <li>
        <b><%= parties[i].id %></b> -
        <a><%= parties[i].title %></a>
        <p><%= parties[i].party_num %></p>
        <button
          onclick="chatRoom(this.value)"
          value="<%= parties[i].party_num %>"
        >
          채팅방 이동
        </button>
      </li>
      <% } %>
    </ul>

    <script>
      (function () {
        let result1 = "";
        const local = sessionStorage.getItem("token");
        console.log(local);
        const currentUrl = window.location.href;
        console.log(currentUrl);
        if (local != null) {
          axios({
            method: "post",
            url: `/verify`,
            data: {
              token: local,
            },
          }).then((result) => {
            result1 = result;
            console.log(result1.data.user.id);
          });
        } else {
          console.log("로그인 실패");
        }
      })();

      function write1() {
        location.href = `/parties/write`;
      }

      async function chatRoom(e) {
        console.log(e);
        location.href = `/chat?partiesNum=${e}`;
      }
    </script>
  </body>
</html>
