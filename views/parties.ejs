<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/public/css/parties.css" />
  </head>
  <body>
    <div class="topBar">
      <a class="howsParty" href="/main"> How's Party </a
      ><a class="signin" href="/signin">login</a>
    </div>
    <h1>Parties</h1>
    <ul>
      파티 목록 <% for(let i = 0; i < allPartyTitles.length; i++){ %>
      <li>
        파티명:
        <a href="/parties/<%=allPartyTitles[i].party_num%>"
          ><%= allPartyTitles[i].title %></a
        >
      </li>

      <% } %>
    </ul>
    <button onclick="newParty()">글쓰기</button>

    <script>
      (function () {
        console.log("<%= allPartyTitles[0].title %>");

        let result1 = "";
        const local = sessionStorage.getItem("token");
        console.log(local);
        const currentUrl = window.location.href;
        console.log(currentUrl);
        if (local != null) {
          axios({
            method: "post",
            url: `${currentUrl}/verify`,
            data: {
              token: local,
            },
          }).then((result) => {
            result1 = result;
            console.log("유저정보: ", result1.data.user);
          });
        } else {
          console.log("로그인 실패");
        }
      })();

      function newParty() {
        location.href = `/parties/host`;
      }
    </script>
  </body>
</html>
