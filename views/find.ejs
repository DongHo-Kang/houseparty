  <body>
    <div class="container">
      <div class="topBar">
        <a class="howsParty" href="/main"> How's Party </a
        ><a class="signin" href="/signin">login</a>
      </div>
      <span id="find_title_id">아이디 찾기</span>
      <form>
        <div class="top">
          <div class="nameBox">
            <img src="/public/img/id.svg" />
            <input
              type="text"
              name="name"
              id="name"
              class="name"
              placeholder="이름"
            />
          </div>
          <div class="birthBox">
            <img src="/public/img/birth.svg" />
            <input
              type="date"
              name="birth"
              id="birth"
              class="birth"
              placeholder="생년월일"
            />
          </div>
          <div class="phoneBox">
            <img src="/public/img/phone.svg" />
            <input
              type="number"
              name="phone_number"
              id="phone_number"
              class="phoneNumber"
              placeholder="휴대전화 번호"
            />
          </div>
          <br />
          <button
            type="button"
            id="findId"
            class="findId"
            onclick="findIdFunc()"
